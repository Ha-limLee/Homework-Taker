{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@server/*": ["../server/*"],
            "@contexts/*": ["src/contexts/*"],
            "@components/*": ["src/components/*"]
        },
        "target": "ES6",
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true
    }
}